[Unit]
Description=Docker Application Container Engine
Documentation=https://docs.docker.com
After=network.target docker.socket
Requires=docker.socket

[Service]
EnvironmentFile=-/etc/sysconfig/docker
ExecStart=/usr/bin/docker daemon --storage-driver overlay -H fd:// -H tcp://127.0.0.1:2375 -H unix:///var/run/docker.sock {{ "--insecure-registry="+docker_internal_registry if at_work==true else "" }}
MountFlags=slave
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
