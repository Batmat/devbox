    </server>
    <server>
      <id>codehaus-nexus-staging</id> <!-- used for release deployment -->
      <username>baptiste</username> <!-- xircles.username -->
      <password>dS3oBDGhrS9s827</password> <!-- xircles.password -->
    </server>
    <server>
      <id>codehaus-nexus-snapshots</id> <!-- used for snapshot deployment -->
      <username>baptiste</username> <!-- xircles.username -->
